<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>
        {% block title %}
            {{ service_name }}
        {% endblock %}
    </title>
    {% block stylesheets %}
        <link rel="shortcut icon" href="{{ asset('images/favicon.ico') }}">
        <link rel="stylesheet" href="{{ asset('build/css/app.css') }}" />
    {% endblock %}
</head>
<body>
<div id="wrap">
    {% if not (disable_nav | default(false)) %}
        <nav class="navbar navbar-expand-md navbar-light">
            <a class="navbar-brand text-hide" href="{{ path('index') }}">
                {{ service_name }}
            </a>
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarNav" aria-expanded="false" aria-controls="navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div id="navbarNav" class="navbar-collapse collapse">
                <ul class="navbar-nav">
                    <li class="nav-item{% if current_page == 'index' %} active{% endif %}">
                        <a class="nav-link" href="{{ path('index') }}">
                            {{ 'Imagehub' }}
                        </a>
                    </li>
                    <li class="nav-item{% if current_page == 'iiif' %} active{% endif %}">
                        <a class="nav-link" href="{{ path('iiif') }}">
                            {{ 'IIIF' }}
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    {% endif %}

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                {% block body %}
                {% endblock %}
            </div>
        </div>
    </div>

    <div id="push"></div>

</div>

<div id="footer">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <p>Powered by <a href="https://github.com/VlaamseKunstcollectie/Imagehub">The Imagehub</a></p>
      </div>
    </div>
  </div>
</div>

{% block javascripts %}
    <script src="{{ asset('build/js/app.js') }}"></script>
{% endblock javascripts %}

</body>
</html>
